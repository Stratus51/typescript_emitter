{
    "name": "@stratus51/emitter",
    "version": "2.0.0",
    "description": "Packet emitter tools and classes",
    "main": "bin/main.js",
    "types": "bin/main.d.ts",
    "scripts": {
        "lint-check": "node_modules/tslint/bin/tslint --project .",
        "pretty-check": "node_modules/prettier/bin-prettier.js --check '**/*.ts'",
        "test": "./node_modules/nyc/bin/nyc.js ts-mocha --colors test.ts",
        "start": "./node_modules/ts-node/dist/bin.js main.ts",
        "prepublish": "./node_modules/.bin/tsc && npm test"
    },
    "author": "Igor <igor_valet@hotmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/Stratus51/typescript_emitter",
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^11.13.18",
        "@types/yargs": "^12.0.12",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "mocha-jenkins-reporter": "^0.4.1",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typescript": "^3.5.3"
    },
    "dependencies": {},
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts",
            "bin",
            "examples",
            "**/*.js"
        ],
        "reporter": [
            "text",
            "lcov"
        ],
        "all": true
    }
}
